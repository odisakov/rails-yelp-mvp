<div class="form">
 <h1>Restaurants#index</h1>
 <p>Find me in app/views/restaurants/index.html.erb</p>
 <p><%= link_to "Create a new Restaurant", new_restaurant_path %>
   <br>
   <br>
   <% @restaurants.each do |restaurant| %>
   <p class="restaurant-name"><%= restaurant.name %></p>
   <p><%= restaurant.address %></p>
   <p><%= restaurant.category.capitalize %></p>
   <p><%= restaurant.phone_number %></p>
   <p><%= link_to "Show Reviews", restaurant_path(restaurant) %></p>

   <br>
   <% end %>
 </div>

