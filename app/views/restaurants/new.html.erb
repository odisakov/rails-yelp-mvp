<div class="form">
  <h1>Restaurants#new</h1>
  <p>Find me in app/views/restaurants/new.html.erb</p>

  <%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.label "Cuisine" %> <br>
  <%= f.select :category, collection: Restaurant::CUISINE %>
  <br>
  <br>
  <%= f.submit %>
  <% end %>
</div>
